generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Goal {
  id        Int      @id @default(autoincrement())
  name      String
  tasks Task[]
  status Status
  createdAt DateTime @default(now())
}

model Task {
  id        Int      @id @default(autoincrement())
  name      String
  goalId Int
  goal Goal @relation(fields: [goalId], references: [id])
  createdAt DateTime @default(now())
  status Status
}

enum Status{
  TODO
  DONE
}
